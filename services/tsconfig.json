{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@models/*": ["src/models/*"],
      "@repositories/*": ["src/repositories/interfaces/*"],
      "@common/*": ["src/common/*"],
      "@dtos": ["src/models/DTOs"],
      "@dtos/*": ["src/models/DTOs/*"]
    },

    "useUnknownInCatchVariables": false,
    "types": ["node", "express"]
  },
  "include": [
    "src/types/**/*.d.ts",
    "src/**/*.ts",
    "config.ts"
  ],
  "exclude": [
    "tests",
    "scripts",
    "src/public/*"
  ]
}
