{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"],
      "@models/*": ["src/models/*"],
      "@repositories/*": ["src/repositories/interfaces/*"],
      "@common/*": ["src/common/*"],
      "@dtos": ["src/models/DTOs"]
    },
    "useUnknownInCatchVariables": false,
    "types": ["vitest/globals", "node", "express"]
  },
  "ts-node": {
    "swc": true,
    "require": ["tsconfig-paths/register", "./config.ts"]
  },
  "include": [
    "src/types/**/*.d.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
    "config.ts",
    "scripts",
    "eslint.config.ts",
    "vitest.config.mts"
, "src/services/interfaces/IUserService"  ],
  "exclude": ["src/public/*"]
}
